{% extends 'layout/default.twig' %}

{% block content %}

<div class="col-sm-9">

    <h3 class="area-title margin-top-0">Destaques</h3>

    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for noticia in destaques %}
            <li data-target="#carousel" data-slide-to="{{ loop.index0 }}" class="{{ (loop.index == 1)? 'active' : '' }}"></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner" role="listbox">
            {% for noticia in destaques %}
            <div class="item {{ (loop.index == 1)? 'active' : '' }}">
                {{ noticia.thumb.code|resize(700,420)|raw }}
                <div class="carousel-caption">
                    <a href="{{ app.request.baseUrl ~ noticia.uri }}">{{ noticia.titulo }}</a>
                </div>
            </div>
            {% endfor %}
        </div>

        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row margin-bottom margin-top">
        {% for noticia in destaques2 %}
        <div class="col-xs-6">
                <div class="img-wrapper margin-bottom">
                    {{ noticia.thumb.code|resize(260,150)|raw }}
                </div>

                <a href="{{ app.request.baseUrl ~ noticia.uri }}"><h4 class="margin-top-0">{{ noticia.titulo }}</h4></a>
                <p>{{ noticia.sinopse }}</p>
        </div>
        {% endfor %}
    </div>
    
    <div>
        {% for noticia in noticias %}
        <div>
            <a href="{{ app.request.baseUrl ~ noticia.uri }}"><h4>{{ noticia.titulo }}</h4></a>
            <p>{{ noticia.sinopse }}</p>
        </div>
        {% endfor %}
    </div>

</div>

<sidebar class="col-sm-3">
    <h3 class="area-title margin-top-0">Servi√ßos</h3>
    <div class="row">
        <div class="col-sm-12 col-xs-6">
            <div class="img-wrapper margin-bottom">
                <script src="http://publicidade.to.gov.br/pub.php" type="text/javascript"></script>
            </div>
        </div>
        {% for banner in banners %}
            <div class="col-sm-12 col-xs-6">
                <div class="img-wrapper margin-bottom">
                {{ banner.code|resize(250)|raw }}
                </div>
            </div>
        {% endfor %}
    </div>
</sidebar>

{% endblock %}
