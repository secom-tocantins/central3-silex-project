{% extends 'layout/default.twig' %}

{% block content %}

<div class="col-sm-12">
    <article class="white-block">
        <a href="{{ app.request.baseUrl }}/noticia/"><h4 class="margin-top-0">Notícias</h4></a>

        <h1>{{ pagina.titulo|e }}</h1>
        <p>{{ pagina.data }} - {{ pagina.autor }}</p>

        {% include "multimidia/videos.twig" with { 'pagina':pagina } %}
        {% include "multimidia/audios.twig" with { 'pagina':pagina } %}
        {% include "multimidia/fotos.twig" with { 'pagina':pagina } %}

        <div>
            {{ pagina.conteudo|raw }}
        </div>

        {% include "multimidia/arquivos.twig" with { 'pagina':pagina } %}

        <div id="share">
            <h4 class="title">Compartilhe esta notícia</h4>
            <span class='st_facebook_large' displayText='Facebook'></span>
            <span class='st_twitter_large' displayText='Tweet'></span>
            <span class='st_googleplus_large' displayText='Google +'></span>
            <span class='st_pinterest_large' displayText='Pinterest'></span>
            <span class='st_delicious_large' displayText='Delicious'></span>
            <span class='st_email_large' displayText='Email'></span>
        </div>
    </article>
</div>

{% endblock %}
