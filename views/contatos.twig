{% extends 'layout/default.twig' %}

{% block content %}

    <article>
        <h1>Contatos</h1>
    {% if contatos %}
        {% for contato in contatos %}
            <p><strong>{{ contato.cargo }}</strong><br />
            {{ contato.nome }}<br />
            {{ contato.telefone }}<br />
            {{ contato.email }}
            </p>
        {% endfor %}
    {% else %}
    <p>Nenhum contato cadastrado.</p>
{% endif %}

</article>
{% endblock %}
